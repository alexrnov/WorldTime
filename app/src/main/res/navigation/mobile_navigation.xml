    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_time">

    <fragment
        android:id="@+id/navigation_time"
        android:name="alexrnov.worldtime.ui.time.HomeFragment"
        android:label="@string/title_time"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="alexrnov.worldtime.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="alexrnov.worldtime.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
